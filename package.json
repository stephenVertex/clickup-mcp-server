{
  "name": "@mcp/clickup-oauth-server",
  "version": "1.0.0",
  "description": "ClickUp MCP Server with OAuth2 authentication",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:unit": "vitest run tests/oauth2-flow.test.ts",
    "test:e2e": "vitest run tests/e2e/",
    "test:perf": "vitest run tests/performance.test.ts",
    "test:claude": "vitest run tests/claude-simulator.test.ts",
    "test:all": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:automated": "tsx scripts/run-automated-tests.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["mcp", "clickup", "oauth2"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.21.2",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.3",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "uuid": "^11.0.5",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  }
}